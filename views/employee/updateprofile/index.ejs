<!DOCTYPE html>
<html>
  <head>
    <title> Update Profile</title>
  </head>
  <body>
    <form role="form", action="/employee/updateprofile", method="post", enctype="multipart/form-data">
    <table>
      <tr>
        <td> USER NAME </td>
        <td> <input type='text' name='n' value='<%= list[0].username %>' readonly> </td>
      </tr>

      <tr>
        <td> FULL NAME </td>
        <td> <input type='text' name='p' value='<%= list[0].fname %>'> <span style="color: red"> <%= err.a %> </span></td>
      </tr>

      <tr>
        <td> MOBILE </td>
        <td> <input type='text' name='c' value='<%= list[0].con %>'> <span style="color: red"> <%= err.c %> </span></td>
      </tr>

      <tr>
        <td> Designnation </td>
        <td> <input type='text' name='d' value='<%= list[0].status %>' readonly> </td>
      </tr>

      <tr>
        <td> PASS: </td>
        <td> <input type='text' name='b' value='<%= list[0].pass %>'> <span style="color: red"> <%= err.b %> </span></td>
      </tr>

      <tr>
        <td colspan='2' align='middle'> <input type='file' name='photo'> <span style="color: red"> <%= err.d %> </span></td>
      </tr>

      <tr>
        <td colspan='2' align='middle'> <input type='submit' name='update' value='UPDATE'> </td>
      </tr>
    </table>
    <a href="/logout"> LOGOUT </a>
    </form>
  </body>
</html>
